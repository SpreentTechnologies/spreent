SECRETS=$(kamal secrets fetch --adapter 1password --account fractionnaire --from Spreent SENDGRID_API_KEY KAMAL_REGISTRY_PASSWORD MYSQL_ROOT_PASSWORD RAILS_MASTER_KEY DO_SPACES_ACCESS_KEY DO_SPACES_SECRET_KEY DO_SPACES_REGION DO_SPACES_REGION RECAPTCHA_SITE_KEY RECAPTCHA_SECRET_KEY)

KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract KAMAL_REGISTRY_PASSWORD $SECRETS)
RAILS_MASTER_KEY=$(kamal secrets extract RAILS_MASTER_KEY $SECRETS)

# DigitalOcean Spaces
DO_SPACES_ACCESS_KEY=$(kamal secrets extract DO_SPACES_ACCESS_KEY $SECRETS)
DO_SPACES_SECRET_KEY=$(kamal secrets extract DO_SPACES_SECRET_KEY $SECRETS)
DO_SPACES_BUCKET=$(kamal secrets extract DO_SPACES_BUCKET $SECRETS)
DO_SPACES_REGION=$(kamal secrets extract DO_SPACES_REGION $SECRETS)

# SendGrid
SENDGRID_API_KEY=$(kamal secrets extract SENDGRID_API_KEY $SECRETS)
RECAPTCHA_SITE_KEY=$(kamal secrets extract RECAPTCHA_SITE_KEY $SECRETS)
RECAPTCHA_SECRET_KEY=$(kamal secrets extract RECAPTCHA_SECRET_KEY $SECRETS)

MYSQL_ROOT_PASSWORD=$(kamal secrets extract MYSQL_ROOT_PASSWORD $SECRETS)
