<div class="devise_links" style="margin-left:auto;margin-right:auto;text-align:center;">
  <%- if controller_name != 'sessions' %>
    <%= link_to I18n.t('links.login_instead'), new_session_path(resource_name) %><br /> <br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to I18n.t('links.sign_up'), new_registration_path(resource_name) %><br /> <br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to I18n.t('links.forgot_your_password'), new_password_path(resource_name) %><br />
  <% end %>
</div>

