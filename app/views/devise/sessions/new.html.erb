<h2 class="mr-auto ml-auto max-w-fit py-4"><%= I18n.t("login.login_title") %></h2>
<div class="bg-white text-black pt-[20px] h-[100vh] px-4 rounded-t-3xl">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div id="flash_messages">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %> bg-red-200 border p-4">
          <%= value %>
        </div>
      <% end %>
    </div>
  <div class="text-base pb-[30px]">
    <%= f.label :email, class: 'text-base text-[#343434]' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'h-[42px] w-full text-base rounded-3xl pl-[20px] border' %>
    <% if resource.errors[:email].present? %>
      <span class="text-red-400 block mt-2"><%= resource.errors[:email].first %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'text-base text-[#343434]' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'h-[42px] w-full text-base rounded-3xl pl-[20px] border' %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t("login.login_title"), class: 'text-white py-[12px] px-[30px] mb-[50px] hover:-translate-y-0.5 hover:shadow-[0_4px_8px_rgba(94,97,231,0.4)] active:translate-y-0.5 active:shadow-[0_1px_3px_rgba(94,97,231,0.4)] transition-all duration-300 ease-in-out rounded-3xl text-xl transition-all duration-300 ease-in-out cursor-pointer ml-auto mr-auto border-none bg-gradient-to-r from-[#5e61e7] to-[#8d7dfa] shadow-[0_2px_5px_rgba(94,97,231,0.3)] mt-10' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
