<% content_for :header do %>
  <div class="notifications-header" style="display: flex;color:white;">
    <h2 style="margin-left:auto;margin-right:auto;">Settings</h2>
  </div>
<% end %>

<div class="profile-settings-container">
  <%= form_with(model: @user, url: profile_path, method: :patch, class: "settings-form", local: true) do |f| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <% @user.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div class="form-section">
      <h2>Profile Photo</h2>
      <div class="avatar-upload">
        <div class="current-avatar">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar.variant(resize_to_fit: [100, 100]), class: "avatar-preview" %>
          <% else %>
            <%= image_tag 'default_avatar.png' %>
          <% end %>
        </div>

        <%= f.file_field :avatar, class: "avatar-input", accept: "image/*" %>
        <%= f.label :avatar, "Change Photo", class: "btn-upload" %>
      </div>
    </div>

    <div class="form-section">
      <h2>Profile Information</h2>

      <div class="form-group" style="display: block;">
        <%= f.label :bio, "Bio" %>
        <%= f.text_area :bio, class: "form-control", placeholder: "Tell us about yourself...", maxlength: 150 %>
        <span class="character-count"><span id="bio-count">0</span>/150</span>
      </div>

      <div class="form-group" style="display: block;">
        <%= f.label :location, "Location" %>
        <%= f.text_field :location, class: "form-control", placeholder: "City, Country" %>
      </div>
    </div>

<!--    <div class="form-section">-->
<!--      <h2>Interests</h2>-->
<!--      <div class="interests-container">-->
        <%# Interest.all.each do |interest| %>
<!--          <div class="interest-checkbox">-->
            <%#= check_box_tag "user[interest_ids][]", interest.id, @user.interests.include?(interest), id: "interest_#{interest.id}" %>
            <%#= label_tag "interest_#{interest.id}", interest.name %>
<!--          </div>-->
        <%# end %>
<!--      </div>-->
<!--    </div>-->

    <div class="form-actions">
      <%= f.submit "Save Changes", class: "btn-primary" %>
    </div>
  <% end %>
</div>