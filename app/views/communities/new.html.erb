<% content_for :header do %>
  <div class="new-community-header" style="display: flex;color:white;">
    <%= link_to feed_path, style: 'color:white;position:absolute;top:23px;' do %>
        <%= image_tag 'arrow_back.png', class: 'text-white fill-white' %>
    <% end %>
    <h2 class="ml-auto mr-auto py-4">Create Community</h2>
  </div>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

    <%= form_with(model: @community, url: category_sport_communities_path, class: "space-y-6", data: { turbo: false }) do |form| %>
      <div class="bg-white rounded-md p-4">
        <div class="mb-5">
          <%= form.label :name, "Community Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, placeholder: "ex: Mont royal runners", class: "w-full rounded-3xl px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-base" %>
        </div>

        <div class="mb-5">
          <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :description, placeholder: "Brief purpose or focus of the community.", class: "w-full px-3 py-2 border border-gray-300 rounded-3xl focus:outline-none text-base focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div class="mb-5">
          <%= form.label :sport_type, "Sport", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :sport_id,
              [["Select", nil]] + Sport.all.map { |s| [s.name, s.id] },
              {},
              { class: "w-full px-3 py-2 border border-gray-300 rounded-3xl focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" }
          %>
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>


        <div class="mb-5">
          <%= form.label :level, "Level", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :level,
              [["Select", nil], %w[Beginner beginner], %w[Intermediate intermediate], %w[Advanced advanced]],
              {},
              { class: "w-full px-3 py-2 border border-gray-300 rounded-3xl focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" }
          %>
        </div>

        <div class="mb-5">
          <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :location, placeholder: "ex: Mont royal runners", class: "w-full rounded-3xl px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-base" %>
        </div>

        <div class="mb-5">
          <%= form.label :privacy, "Privacy", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :privacy,
              [["Select", nil], %w[Public public], %w[Private private]],
              {},
              { class: "w-full px-3 py-2 border border-gray-300 rounded-3xl focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" }
          %>
        </div>


        <%= form.submit "Create Community", class: "w-[283px] rounded-3xl  ml-auto mr-auto py-3 px-4 cursor-pointer bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-medium hover:from-blue-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
