<% if conversations.any? %>
  <ul class="divide-y">
    <% conversations.each do |conversation| %>
      <% opposed_user = conversation.opposed_user(current_user) %>
      <li class="hover:bg-gray-50">
        <%= link_to conversation_path(conversation), class: "flex items-center p-4" do %>
          <% if opposed_user.avatar.present? %>
            <img src="<%= opposed_user.avatar %>" class="h-12 w-12 rounded-full mr-4" alt="<%= opposed_user.name %>">
          <% else %>
            <div class="h-12 w-12 rounded-full bg-gray-300 flex items-center justify-center mr-4">
              <%= image_tag 'default_avatar.png' %>
            </div>
          <% end %>
          <div class="flex-1 min-w-0">
            <div class="flex items-center justify-between">
              <h3 class="text-sm font-medium text-gray-900 truncate"><%= opposed_user.name %></h3>
              <% if conversation.last_message %>
                <p class="text-xs text-gray-500">
                  <%= short_time_ago_in_words(conversation.last_message.created_at) %>
                </p>
              <% end %>
            </div>
            <% if conversation.last_message %>
              <p class="text-sm text-gray-500 truncate">
                <% if conversation.last_message.user_id == current_user.id %>
                  <span class="text-gray-400">You: </span>
                <% end %>
                <%= conversation.last_message.body %>
              </p>
            <% end %>
          </div>
          <div class="ml-4">
            <button class="p-2 text-gray-500 rounded-full hover:bg-gray-100">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 5a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.121-1.121A2 2 0 0011.172 3H8.828a2 2 0 00-1.414.586L6.293 4.707A1 1 0 015.586 5H4zm6 9a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class="flex flex-col items-center justify-center h-full text-gray-500 p-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
    </svg>
    <p class="text-center">No conversations found</p>
    <% if params[:query].present? %>
      <p class="text-center text-sm mt-2">Try a different search term or start a new conversation</p>
    <% else %>
      <p class="text-center text-sm mt-2">Start by clicking the new message button above</p>
    <% end %>
  </div>
<% end %>