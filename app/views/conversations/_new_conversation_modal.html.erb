<div id="new-conversation-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden z-50" data-controller="search-modal">
  <div class="bg-white rounded-lg shadow-lg max-w-md w-full mx-4" data-modal-target="content" data-action="click@window->modal#clickOutside keyup@window->modal#closeOnEscape">
    <div class="p-4 border-b">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold">New Conversation</h3>
        <button type="button" class="text-gray-400 hover:text-gray-500" data-action="modal#close">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>

    <div class="p-4">
      <div class="mb-4">
        <input type="text" id="user-search" placeholder="Search users..." class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <%= form_with model: @new_conversation, url: conversations_path, class: "space-y-4" do |f| %>
        <%= f.hidden_field :sender_id, value: current_user.id %>

        <div id="users-list" class="max-h-60 overflow-y-auto space-y-2">
          <% @users.each do |user| %>
            <div class="user-item p-2 rounded-lg hover:bg-gray-100 cursor-pointer flex items-center" data-user-id="<%= user.id %>" data-name="<%= user.name.downcase %>">
              <% if user.avatar.present? %>
                <img src="<%= user.avatar %>" class="h-10 w-10 rounded-full mr-3" alt="<%= user.name %>">
              <% else %>
                <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center mr-3">
                  <span class="text-gray-600"><%= user.name.upcase %></span>
                </div>
              <% end %>
              <div>
                <p class="font-medium"><%= user.name %></p>
              </div>
              <input type="radio" name="conversation[recipient_id]" value="<%= user.id %>" class="ml-auto form-radio h-4 w-4 text-indigo-600">
            </div>
          <% end %>
        </div>

        <div class="flex justify-end pt-2 border-t">
          <button type="button" class="px-4 py-2 text-gray-500 hover:text-gray-700 mr-2" data-action="modal#close">Cancel</button>
          <%= f.submit "Start Conversation", class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>