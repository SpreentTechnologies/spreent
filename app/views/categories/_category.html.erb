<div id="<%= dom_id(category) %>" class="mb-[40px]">
  <h2 class="text-2xl font-bold mb-4 pb-2 border-b border-gray-200"><%= category.name %></h2>

  <div class="flex flex-col gap-5">
    <% category.sports.each_slice(3) do |sports_row| %>
      <div class="grid gap-4 grid-cols-3">
        <% sports_row.each do |sport| %>
          <%= link_to category_sport_communities_path(sport_id: sport.id, category_id: category.id), class: 'ml-auto mr-auto text-center no-underline' do %>
          <%= render partial: 'sports/sport', locals: { sport: sport } %>
            <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
