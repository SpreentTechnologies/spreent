<div id="<%= dom_id(category) %>" class="category-container">
  <h2 class="category-title"><%= category.name %></h2>

  <div class="sports-grid">
    <% category.sports.each_slice(3) do |sports_row| %>
      <div class="sports-row">
        <% sports_row.each do |sport| %>
          <%= link_to category_sport_communities_path(sport_id: sport.id, category_id: category.id) do %>
          <%= render partial: 'sports/sport', locals: { sport: sport } %>
            <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>