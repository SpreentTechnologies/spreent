  <body>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield :header %>
    <div class="fold">
    <%= yield %>
    </div>
    <nav>
        <div class="nav-wrapper">
            <%= link_to feed_path, class: "text-center #{'selected-nav' if current_page?(feed_path) || current_page?(notifications_path)} nav-item" do %>
              <div class="flex flex-col items-center">
                  <i class="fa-solid fa-house"></i>
              </div>
            <% end %>

            <%= link_to categories_path, class: "text-center #{'selected-nav' if current_page?(categories_path)} nav-item" do %>
              <div class="flex flex-col items-center">
                  <i class="fa-solid fa-star"></i>
              </div>
            <% end %>

            <%= link_to '', class: "text-center #{'selected-nav' if current_page?('')} nav-item" do %>
              <div class="flex flex-col items-center">
                  <i class="fa-solid fa-calendar"></i>
              </div>
            <% end %>

            <%= link_to settings_path, class: "text-center #{'selected-nav' if current_page?(settings_path)} nav-item" do %>
              <div class="flex flex-col items-center">
                  <i class="fa-solid fa-user"></i>
              </div>
            <% end %>

          <% if current_user.user_type == 'admin' %>
            <%= link_to admin_path, class: "text-center #{'selected-nav' if current_page?(admin_path)} nav-item" do %>
              <div class="flex flex-col items-center">
                <i class="fa-solid fa-screwdriver-wrench"></i>
              </div>
            <% end %>
          <% end %>
        </div>
    </nav>

      <%= turbo_frame_tag "comments_panel", target: "_top" %>

      <%= javascript_tag do %>
        document.addEventListener('turbo:before-fetch-request', function(event) {
          if (event.target.id === 'comments_panel') {
              document.body.classList.add('no-scroll');
          }
        });
      <% end %>

      <div id="modal" class="modal" data-controller="modal">
        <div class="modal-overlay" data-action="click->modal#close"></div>
        <div class="modal-container">
          <div class="modal-header">
            <h3 class="modal-title" id="modal_title">Modal Title</h3>
            <button type="button" class="modal-close" data-action="click->modal#close">&times;</button>
          </div>
          <div class="modal-content">
            <%= turbo_frame_tag "modal_frame" %>
          </div>
        </div>
      </div>
  </body>
</html>
