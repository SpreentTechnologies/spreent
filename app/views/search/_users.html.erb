<div class="user-results">
  <h3>Users</h3>
  <ul class="results-list">
    <% users.each do |user| %>
      <li class="result-item">
        <% if user.avatar.attached? %>
          <%= image_tag user.avatar, class: "user-avatar" %>
        <% end %>
        <div>
          <%= link_to user.username, user_path(user) %>
          <p><%= user.name %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>