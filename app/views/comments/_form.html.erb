<%= form_with(model: [post, comment], id: "comment_form", class: "comment-form", data: { controller: "reset_form", action: "turbo:submit-end->reset-form#reset" }) do |form| %>
  <% if comment.errors.any? %>
    <div class="form-errors">
      <% comment.errors.full_messages.each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="">
    <div class="form-input">
      <%= form.text_area :content,
                         class: "comment-textarea",
                         placeholder: "Write a comment...",
                         rows: 2 %>
    </div>

    <div id="upload-progress-container" class="upload-progress-container" style="display: none;">
      <div class="upload-progress-bar-outer">
        <div id="upload-progress-bar" class="upload-progress-bar-inner" style="width: 0%"></div>
      </div>
      <div id="upload-progress-text" class="upload-progress-text">0% Uploaded</div>
    </div>

    <div class="form-submit">
      <%= form.submit "Post", class: "submit-button-login", style: 'margin-top: 15px;' %>
    </div>
  </div>
<% end %>
